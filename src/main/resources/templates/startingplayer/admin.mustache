<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">

    <title>Starting player questions admin page</title>
  </head>
  <body>
    <div class="jumbotron">
      <h1 class="display-4">Beheer startspeler vragen</h1>
    </div>
    <div class="container clearfix">
      <form method="POST">
        <div class="form-group">
          <label for="questionInput">Vraag</label>
		  <input type="text" name="question" class="form-control" id="questionInput" placeholder="Enter question">
		</div>
		<button type="submit" class="btn btn-primary float-right">Vraag toevoegen</button>
	  </form>
    </div>
    <div class="container mt-5">
      <a class="btn btn-primary float-right mb-1" href="export/PDF">Exporteren als PDF</a>
      <div class="form-group">
	    <label for="filterInput">Filter</label>
        <input type="text" name="filterInput" class="form-control" id="filterInput" placeholder="Enter filter">
      </div>
	  <table id="questionsTable" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Vraag</th>
            <th scope="col">verwijder</th>
          </tr>
        </thead>
        <tbody>
          {{#questions}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{question}}</td>
              <td>
              	<form action="{{id}}/delete" method="POST" name="question">
              	  <button type="submit" class="btn btn-danger float-right"><i class='fas fa-times'></i></button>
              	</form>
              </td>
            </tr>
          {{/questions}}
        </tbody>
      </table>
    </div>
    

    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script>
      $(document).ready(function(){
        $("#filterInput").on("keyup", function() {
          var value = $(this).val().toLowerCase();
          $("#questionsTable tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
          });
        });
      });
    </script>
  </body>
</html>
